<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2" android:orientation="vertical">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="UserId"
            android:ems="10"
            android:id="@+id/editTextUserId"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/editTextName"
            android:layout_marginTop="10dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Email"
            android:ems="10"
            android:id="@+id/editTextEmail"
            android:layout_marginTop="10dp" android:layout_marginStart="0dp"
    />
    <Button
            android:text="send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/send_button"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="54dp"
    />
    <Button
            android:text="get"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/get_Button"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="54dp"
    />
    <Button
            android:text="메인화면으로 돌아가기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            android:layout_marginEnd="87dp"
    />
    <ListView android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp"
              android:id="@+id/listView"/>
</LinearLayout>